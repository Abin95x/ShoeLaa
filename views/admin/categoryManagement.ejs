  <%- include("./layout/adminHeader.ejs") %>

  <div class="flex">

    <%- include("./layout/adminSidebar.ejs") %>

    <div class="right">

      <%- include("./layout/adminNavbar.ejs") %>
      <style>
      
          body {
            font-family: Arial, sans-serif;
            margin: 0;
           
          }
        
          .center-content {
            margin-left: auto;
            margin-right: auto;
            width: 100%;
          }
        
          h1 {
            color: #333;
            text-align: left;
          }
        
          .category-table {
            background-color: rgb(87, 83, 83);
            color: white;
            border-collapse: collapse;
            width: 100%;
          }
        
          .category-table th,
          .category-table td {
            padding: 10px;
            border: 1px solid white;
          }
        
          .category-table th {
            text-align: left;
          }
        
          .category-table a {
            color: white;
            text-decoration: none;
            padding: 5px 10px;
            border-radius: 5px;
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
          }
        
          .category-table a.btn-danger {
            background-color: #e74c3c;
          }
        
          .category-table a.btn-success {
            background-color: #2ecc71;
          }
        
          .category-table a.btn-primary {
            background-color: #3498db;
          }
          h1 {
    text-align: center;
    margin-top: 50px;
  }
        </style>
       
      
        
        <div class="center-content">
          <h1>Category Management</h1>
          <br>          
          <form action="/admin/categoryManagement" method="post">
            <div style="display: flex; align-items: center;">
              <h4 style="margin-right:10px; margin-left: 10px;">Add New Category</h4>

              <input type="text" id="name" name="name" placeholder="Category Name:" required>
              
              <button type="submit" style="background-color: green; color: white;">Add category</button>
              <% if (typeof message !== 'undefined') { %>
                <h5 style="color: rgb(255, 8, 0);"><%= message %></h5>
            <% } %>
            <% if (typeof message2 !== 'undefined') { %>
              <h5 style="color: rgb(255, 8, 0);"><%= message2 %></h5>
          <% } %>
            </div>
           
            
          </form>
        
          <br>
        
          <div class="container">
            <table class="category-table">
              <thead>
                <tr>
                  <th>Category</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < categories.length; i++) { %>
                  <% const category = categories[i]; %>
                  <tr>
                    <td><%= category.name %></td>
                    <td>
                      <% if (categories[i].blocked === false) { %>
                        <a href="/admin/categoryUnlist/?id=<%= categories[i]._id %>" class="btn btn-danger">Unlist</a>
                      <% } else { %>
                        <a href="/admin/categoryUnlist/?id=<%= categories[i]._id %>" class="btn btn-success">List</a>
                      <% } %>
                      <br>
                      <a href="/admin/categoryEdit/?id=<%= categories[i]._id %>" class="btn btn-primary">Edit</a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>


    </div>

  </div>
  

  
  <%- include("./layout/adminFooter.ejs") %>
  