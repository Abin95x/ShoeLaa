<%- include("./layout/adminHeader.ejs") %>

<div class="flex">
  
  <%- include("./layout/adminSidebar.ejs") %>
  
  <style>
    body {
      background-color: #333;
      color: #fff;
    }
  
    .user-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  
    .user-list-item {
      background-color: #222;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 5px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
  
    .user-list-item .user-info {
      flex-grow: 1;
    }
  
    .user-list-item .user-actions {
      display: flex;
      align-items: center;
    }
  
    .user-list-item .user-actions button {
      margin-left: 10px;
      background-color: #444;
      color: #fff;
      border: none;
      padding: 5px 10px;
      border-radius: 3px;
      cursor: pointer;
    }
  
    .user-list-item .user-actions button:hover {
      background-color: #666;
    }
  
    h1 {
      color: #fff;
     text-align: center;
    }
  </style>
  
  <div class="right">
    
    <%- include("./layout/adminNavbar.ejs") %>
    
    <div class="container">
      <h1>User Management</h1>
      <ul class="user-list">
        <% for (let i = 0; i < users.length; i++) { %>
          <% const user = users[i]; %>
          <li class="user-list-item">
            <div class="user-info">
              <h4>name   : <%= user.name %></h4>
              <h4>email  : <%= user.email %></h4>
              <h4>mobile : <%= user.mobile %></h4>
     
              <!-- Additional user information can be displayed here -->
            </div>
            <div class="user-actions">
              <% if (users[i].isBlock === false) { %>
                <a href="/admin/userBlock/?id=<%= users[i]._id %>" class="btn btn-danger">Block</a>
              <% } else { %>
                <a href="/admin/userBlock/?id=<%= users[i]._id %>" class="btn btn-success">Unblock</a>
              <% } %>
            </div>
          </li>
        <% } %>
      </ul>
    </div>
  
  </div>

</div>

<%- include("./layout/adminFooter.ejs") %>
