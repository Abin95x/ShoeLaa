        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    /* Button link style */
    .profile-details a {
        text-decoration: none;
        color: #fff;
    }

    /* Button hover effect */
    .profile-details button:hover {
