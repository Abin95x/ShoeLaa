    <form action="/changePass" method="post" onsubmit="return validateForm()">
        <% if (typeof message !== 'undefined') { %>
            <h5 style="color: rgb(255, 0, 0);"><%= message %></h5>
        <% } %>
        
        <div class="form-group">
            <label for="currPassword"></label>
            <input type="password" id="currPassword" name="currPassword" class="form-control" placeholder="Enter Old Password" required>
        </div>
        <div class="form-group">
            <label for="password1"></label>
            <input type="password" id="password1" name="password1" class="form-control" placeholder="Enter New Password" required>
        </div>
        <div class="form-group">
            <label for="password2"></label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Enter New Password, Again" required>
        </div>
        <div class="form-group">
            <button type="submit" style="background-color: #147900; width: 13.2cm; border: #e504f9; color: #fff;" class="btn btn-primary">Reset Password</button>
        </div>
    </form>
</div>
</div>

<script>
    function validateForm() {
        var currPassword = document.getElementById('currPassword').value;
        var password1 = document.getElementById('password1').value;
        var password2 = document.getElementById('password2').value;

        // Check if any field contains only spaces
        if (currPassword.trim() === '' || password1.trim() === '' || password2.trim() === '') {
            alert('Spaces are not allowed');
            return false;
        }
        return true;
    }
</script>


