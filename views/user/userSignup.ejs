<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-4">
                <div class="card-header"><strong>SignUp</strong></div>
                <div class="card-body">
                    <% if (typeof message !== 'undefined') { %>
                        <p style="color: rgb(255, 0, 0);"><%= message %></p>
                    <% } %>
                    <form action="" method="post">
                        <div class="form-group">
                            <label for="name"><strong>Username</strong></label>
                            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Username" required>
                            <div class="error"></div>
                        </div>
                        <div class="form-group">
                            <label for="mobile"><strong>Mobile Number</strong></label>
                            <input type="text" id="mobile" name="mobile" class="form-control" placeholder="Enter Mobile Number" required>
                            <div class="error"></div>
                        </div>
                        <div class="form-group">
                            <label for="email"><strong>Email</strong></label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email Address" required>
                            <div class="error"></div>
                        </div>
                        <div class="form-group">
                            <label for="password"><strong>Password</strong></label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
                        </div>
                        <div class="form-group">
                            <label for="mobile"><strong>Referral Code - optional </strong></label>
                            <input type="code" id="referral" name="referral" class="form-control" placeholder="Enter Referral Code " >
                            <div class="error"></div>
                        </div>
                        <input type="hidden" name="code" value="<%= randomString %>">
                        <div class="form-group">
                            <button style="background-color: #147900; width: 13.2cm; border: #e504f9; color: #fff;" class="btn btn-primary">Register Now</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    
    let name=document.getElementById('name')
    let email=document.getElementById('email')
    let mobile=document.getElementById('mobile')
    let password=document.getElementById('password')
  

    name.addEventListener("input",()=>{
        if(name.value.trim()==""){
            name.setCustomValidity("name cannot be null")
        }else{
            name.setCustomValidity("")
        }

    })
    email.addEventListener("input",()=>{
        if(email.value.trim()==""){
            email.setCustomValidity("email cannot be null")
        }else{
            email.setCustomValidity("")
        }

    })
    mobile.addEventListener("input",()=>{
        if(mobile.value.trim()==""){
            mobile.setCustomValidity("mobile  number cannot be null")
        }else{
            mobile.setCustomValidity("")
        }

    })
    password.addEventListener("input",()=>{
        if(password.value.trim()==""){
            password.setCustomValidity("password  number cannot be null")
        }else{
            password.setCustomValidity("")
        }

    })
    
    </script>

