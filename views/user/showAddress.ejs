  <div class="card" >
    <% if (cartAddress && cartAddress.length > 0) { %>
        <h2 style="color: black;">Shipping Addresses</h2>
        <form>
            <ul >
                <% cartAddress.forEach((address, index) => { %>
                    <li > 
                       
                        Address: 
                                <%= address.houseName %>,
                                <%= address.village %>,
                                <%= address.state %>,
                                <%= address.country %>,
                                <%= address.pin %>,
                                <%= address.country %>
                                <br>
                                Mobile: <%= address.mobile%>
                                <button class="green"> <a href="/editAddress?id=<%=address._id %>">Edit</a> </button>
                                <button class="red"> <a href="/deleteAddress?id=<%=address._id %>">Delete</a> </button>
                      
                    </li> 
                    <br>  
                <% }); %>
                <h5> <a href="/addAddress" style="color: #0022e2;">+ Add address</a> </h5>
            </ul>
                <!-- <h5> <a href="/checkOutAddress"  style="color: rgb(0, 162, 255); margin-left: 30px;"> + Add address</a></h5>   -->
        </form>
    <% } else { %>
        <p>No addresses found for this user.</p>
        <h5> <a href="/addAddress" style="color: #0022e2;">+ Add address</a> </h5>

        <!-- <h5> <a href="/checkOutAddress"  style="color: rgb(0, 162, 255); margin-left: 30px;"> + Add address</a></h5>   -->
    <% } %> 
