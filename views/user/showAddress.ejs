<style>
    /* Add your custom styles here */
  
   
  
    .colorlib-nav a {
      color: #fff;
      text-decoration: none;
    }
  
    .colorlib-nav a:hover {
      color: #ff6f61;
    }
  
    /* Sale banner styles */
    .sale {
      background-color: #ff6f61;
      color: #fff;
      padding: 10px 0;
      text-align: center;
    }
  
    /* Card styles */
    .card {
      background-color: #f8f8f8;
      border-radius: 10px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
      padding: 20px;
      
      margin: 300px;
      margin-top: 0px;
    }
  
    /* Address styles */
    .card h2 {
      color: #333;
      font-size: 24px;
      margin-bottom: 20px;
    }
  
    .card h5 {
      margin-bottom: 10px;
    }
  
    .card button.red {
      background-color: #ff0000;
      border: none;
      color: #fff;
      padding: 5px 10px;
      border-radius: 5px;
      cursor: pointer;
      
    }
    .card button.green {
      background-color: #51a8f8;
      border: none;
      color: #fff;
      padding: 5px 10px;
      border-radius: 5px;
      cursor: pointer;
      
    }
  
  
    .card button.green:hover {
      background-color: #0022e2;
    }
    .card button.red:hover {
      background-color: #ffd900;
    }
  
  </style>
<!-- navbar -->

