<!-- login form -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                
                <div class="card-header"><strong>Login</strong></div>
                <div class="card-body">
                    <% if (typeof messageRed !== 'undefined') { %>
                        <h5 style="color: rgb(255, 8, 0);"><%= messageRed %></h5>
                    <% } %>
                    
                    <% if (typeof message !== 'undefined') { %>
                        <h5 style="color: rgb(2, 255, 65);"><%= message %></h5>
                    <% } %>

                    <% if (typeof messagePass!== 'undefined') { %>
                        <h5 style="color: rgb(30, 255, 0);"><%= messagePass %></h5>
                    <% } %>
                    <form action="/userLogin" method="post" onsubmit="return validateForm()">
                        <div class="form-group">
                            <label for="email"><strong>Email</strong></label>
                            <input type="text" id="email" name="email" class="form-control" placeholder="Enter Email Address" required>
                        </div>
                    
                        <div class="form-group">
                            <label for="password"><strong>Password <a href="/forgotEmail" style="padding-left: 290px;">forgot password?</a></strong></label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" style="width: 13.2cm; background-color: #ffee00; border: #e504f9; color: rgb(94, 92, 92);">Login</button>
                        </div>
                    </form>
                </div>
            </div>
            <br>
            <div class="text-center">
                <span>New customer?</span>
                <a style="color: blue;" href="/userSignup">Start here</a>
                <br>
                
            </div>
                         
        </div>
    </div>
</div>

<script>
    function validateForm() {
        // Get the values entered by the user
        var email = document.getElementById("email").value;
        var password = document.getElementById("password").value;

        // Perform validation
        if (email.trim() === "") {
            alert("Please enter an email address.");
            return false;
        }

        if (password.trim() === "") {
            alert("Please enter a password.");
            return false;
        }

        // Additional validation logic can be added here

        // If all validation passes, the form will be submitted
        return true;
    }
</script>


