	<script>
		function add(productId) {
            $.ajax({
                url: '/addToCartt',
                method: 'post',
                data: {
                    productId: productId
                },
                success: (response) => {
                    if (response.success) {
                        Swal.fire({
                            title: 'Product added',
                            text: 'Product added to cart',
                            timer: 1500,
                            icon: 'success'
                        })
                    } else {
                        Swal.fire({
                            title: 'oops..!',
                            text: response.message,
                            timer: 1500,
                            icon: 'warning'
                        })
                    }
                },
                error: (err) => {
                    
                    Swal.fire({
                        title: 'Error..!',
                        text: response.message,
                        timer: 1500,
                        icon: 'error'
                    })
                }
            })
        }
		function removeFromWish(productId) {
            Swal.fire({
                title: 'Remove from Wishlist',
                text: 'Are you sure to delete this product from the wishlist',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Remove',
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/wishDelete',
                        method: 'post',
                        data: {
                            proId: productId
                        },
                        success: (response) => {
                            if (response.success) {
                                $('#reloadDiv').load('/wishlist #reloadDiv', () => {
                                    Swal.fire({
                                        title: 'Removed',
                                        text: 'Product removed from wishlist',
                                        icon: 'success',
                                        timer: 1500
                                    })
                                })
                            } else {
                                Swal.fire({
                                    title: 'oops..!',
                                    text: response.message,
                                    icon: 'error',
                                    timer: 1500
                                })
                            }
                        },
                        error: (err) => {
                            console.log(err.message);
                            Swal.fire({
                                title: 'Error!',
                                text: response.message,
                                icon: 'error',
                                timer: 1500
                            })
                        }
                    })
                }
            })
        }
	</script>