  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6 wallet-container">
        <div class="container mt-4">
            <div class="d-flex align-items-center justify-content-between">
              <h3></h3>
              <a href="" class="btn btn-md btn-success mt-3">Back</a>
            </div>
            <div class="row">
              <div class="col-12">
                <h3>Wallet History</h3>
                <div class="table-responsive">
                  <table class="table table-bordered table-hover">
                    <thead class="thead-dark">
                      <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Description</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% walletData.walletHistory.forEach((walletEntry) => { %>
                        <tr>
                          <td><%= walletEntry.date.toISOString().substr(0, 10) %></td>
                          <% if (walletEntry.amount > 0) { %>
                            <td class="text-success">₹<%= walletEntry.amount %></td>
                          <% } else { %>
                            <td class="text-danger">₹<%= walletEntry.amount %></td>
                          <% } %>
                          <td><%= walletEntry.description %></td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
                
      
    </div>
  </div>




