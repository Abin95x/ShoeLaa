        <div class="col-md-6">
            <div class="card">
                
                <div class="card-header"><strong>Verify Email</strong></div>
                <div class="card-body">
                     <% if (typeof message !== 'undefined') { %>
                        <h5 style="color: rgb(255, 8, 0);"><%= message %></h5>
                    <% } %> 
                    
                    <form action="/getEmail" method="post" onsubmit="return validateForm()">
                        <div class="form-group">
                            <!-- <label for="email"><strong>Email</strong></label> -->
                            <input type="text" id="email" name="email" class="form-control" placeholder="Enter Email Address" required>
                        </div>
                    
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" style="width: 13.2cm; background-color: #09ff00; border: #e504f9; color: rgb(94, 92, 92);">Verify</button>
                        </div>
                    </form>
                    
                </div>
            </div>
            <br>
            
                         
        </div>
    </div>
</div>

<script>
    function validateForm() {
        // Get the value entered by the user
        var email = document.getElementById("email").value;

        // Perform validation
        if (email.trim() === "") {
            alert("Please enter an email address.");
            return false;
        }

        // Additional validation logic can be added here

        // If all validation passes, the form will be submitted
        return true;
    }
</script>

