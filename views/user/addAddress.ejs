      <div class="containerr">
        <h1>Add Address</h1>
        <form action="/saveAddress" method="POST" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="country">Country:</label>
                <input type="text" id="country" name="country" required>
            </div>
    
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
    
            <div class="form-group">
                <label for="mobile">Mobile:</label>
                <input type="text" id="mobile" name="mobile" required>
            </div>
    
            <div class="form-group">
                <label for="pin">PIN:</label>
                <input type="text" id="pin" name="pin" required>
            </div>
    
            <div class="form-group">
                <label for="houseName">House Name:</label>
                <input type="text" id="houseName" name="houseName" required>
            </div>
    
            <div class="form-group">
                <label for="village">Village:</label>
                <input type="text" id="village" name="village" required>
            </div>
    
            <div class="form-group">
                <label for="state">State:</label>
                <input type="text" id="state" name="state" required>
            </div>
    
            <input type="submit" value="Submit">
        </form>
    </div>
   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
                
        <script>
            function validateForm() {
                // Get form inputs
                var country = document.getElementById('country').value;
                var pin = document.getElementById('pin').value;
                var mobile = document.getElementById('mobile').value;
                var houseName = document.getElementById('houseName').value;
                var village = document.getElementById('village').value;
                var state = document.getElementById('state').value;
            
                // Basic validation
                if (country.trim() === '' || pin.trim() === '' || mobile.trim() === '' || houseName.trim() === '' || village.trim() === '' || state.trim() === '') {
                    
                    Swal.fire({
                    title: 'Error',
                    text: "All fields are required. Please fill.",
                    icon: 'warning',
                    
                    })
                    return false;
                }
            
                // Validate pin and mobile
                var pinRegex = /^[0-9]{6}$/;
                var mobileRegex = /^[0-9]{10}$/;
            
                if (!pin.match(pinRegex)) {
                    
                    Swal.fire({
                    title: 'Error',
                    text: "Please enter a valid zip code.",
                    icon: 'warning',
                    
                    })
                    return false;
                }
            
                if (!mobile.match(mobileRegex)) {
                    
                    Swal.fire({
                    title: 'Error',
                    text: "Please enter a valid mobile number.",
                    icon: 'warning',
                    
                    })
                    return false;
                }
            
                // You can add more specific validation rules here, such as checking if the email and phone are valid formats.
            
                return true; // Form will be submitted if all validations pass
            }
            </script>

