        <div style="text-align: center; margin-top: 50px; margin-left: auto; margin-right: auto; border: 2px solid; width: 500px; height: 370px">
        <br>
        
            <h1 style="font-size: 28px; color: #333;">OTP Verification</h1>
            <% if (typeof message !== 'undefined') { %>
                <h5 style="color: rgb(2, 238, 255);"><%= message %></h5>
            <% } %>

            <% if (typeof message2 !== 'undefined') { %>
                <h5 style="color: rgb(255, 0, 0);"><%= message2 %></h5>
            <% } %>
            <form id="otpForm" style="margin-top: 20px;" action="/otpVerification" method="post">
                <label for="otp" style="font-size: 18px; color: #555;">Enter OTP:</label>
                <br>
                <input type="text" id="otp" name="otp" style="padding: 8px 12px; border: 1px solid #ccc; border-radius: 4px; font-size: 16px; width: 200px;" required>
                
                <input type="submit" value="Verify" style="padding: 8px 10px; border: none; border-radius: 4px; background-color: #4CAF50; color: white; font-size: 16px; cursor: pointer; margin-top: 10px;">
                    <br>
                    
                    <p id="countdown">Resend OTP</p>
                    <div style="display: flex; justify-content: center;">
                        <a id="resendButton" style="width: 100px;" class="btn btn-primary" onclick="resendOTP()" href="/resendOtp">Resend</a>   
                    </div>
            </form>
        </div>
    
   
        <script>
            var countdownElement = document.getElementById("countdown");
            var resendButton = document.getElementById("resendButton");

            function startCountdown() {
                var countdown = 10; // Countdown duration in seconds
                resendButton.style.display = "none"
                var countdownTimer = setInterval(function () {
                    countdown--;
                    countdownElement.innerHTML = "Resend OTP in " + countdown + "s";
        
                    if (countdown <= 0) {
                        clearInterval(countdownTimer);
                        countdownElement.innerHTML = "Resend OTP";
                        resendButton.disabled = false;
                        resendButton.style.display = "block"

                    }
                },1000);
            }
        
            function resendOTP() {
                // Disable the button and start the countdown
                resendButton.disabled = true;
                startCountdown();
            }
        
            // Start the countdown on page load
            startCountdown();
            

            
        </script> 
    


        
        

