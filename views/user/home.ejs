			                  <input type="search" class="form-control search" placeholder="Search">
			                  <button class="btn btn-primary submit-search text-center" type="submit"><i class="icon-search"></i></button>
			               </div>
			            </form>
			         </div>
		         </div>
					<div class="row">
						<div class="col-sm-12 text-left menu-1">
							<ul>
								<li class="active"><a href="/">Home</a></li>
								
								
								<li><a href="#">About</a></li>
								<li><a href="#">Contact</a></li>
								<li class="cart">
									<% if (!user) { %>
									<button type="button" onclick="window.location.href='/userLogin'" style="background-color: #5cdd9d; color: rgb(0, 0, 0); padding: 3px; border: 0cm; border-radius: 720px; cursor: pointer; width: 100px; height: 25px; display: flex; justify-content: center; align-items: center;">
									  Login
									</button>
									<% } %>
									
									<% if (user) { %>

									</li><li class="cart"><a href="/userProfile"><i class="icon-profile"></i> Profile </a></li>

									<% } %>
										
										
