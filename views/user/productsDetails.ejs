	<script>
		function addToCart(productId,productPrice,offerPrice){
			let quantity = document.getElementById('quantity').value
            $.ajax({
                url: '/addToCart',
                method: 'post',
                data: {
                    productId: productId,
					quantity: quantity,
					price: productPrice,
					offerPrice: offerPrice
					
                },
				success: (response) => {
                    if (response.success) {
                        Swal.fire({
                            title: 'Product added',
                            text: 'Product added to cart',
                            timer: 1500,
                            icon: 'success'
                        })
                    } else {
                        Swal.fire({
							title: "info",
							icon: "info",
							text: 'Please Login',
							timer: 5000
							
						}).then((result) => {
							// Check if OK button is clicked
							if (result.isConfirmed) {
								// Redirect to the login page
								window.location.href = "/userLogin"; 
							}
						});
                    }

                },
                error: (err) => {

                    Swal.fire({
						title: "Error",
						icon: "error",
						text: 'Something went wrong',
						timer: 1500
					})
                }
            })
        }


		function addToWishlist(productId){
			$.ajax({
				url:"/addToWislist",
				method:"POST",
				data:{
					productId: productId,
					
				},
				success: (response)=>{
					if(response.success){
						
                            Swal.fire({
                                title: 'Success',
                                text: 'Product added to wishlist',
                                icon: 'success',
                                timer: 1500
                            })
                     
					}else{
						Swal.fire({
							title: "info",
							icon: "info",
							text: 'Please Login',
							timer: 5000
							
						}).then((result) => {
							// Check if OK button is clicked
							if (result.isConfirmed) {
								// Redirect to the login page
								window.location.href = "/userLogin"; 
							}
						});
					}
				},
				error: (error)=>{
					Swal.fire({
						title: "Error",
						icon: "error",
						text: 'Something went wrong',
						timer: 1500
					})
				}
			})
		}
	         

	</script>



